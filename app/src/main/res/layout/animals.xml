<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".animals.animalsFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/animalstxtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#83CCED"
            android:text="Animals" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/bull"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/bull" />

            <ImageView
                android:id="@+id/chicken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/chicken" />

            <ImageView
                android:id="@+id/cow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/cow" />

        </LinearLayout>
        <TextView
            android:id="@+id/cropstxtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#83CCED"
            android:text="Crops" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                android:scaleType="centerInside"
                android:src="@drawable/rice" />

            <ImageView
                android:id="@+id/barley"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:alpha="0.5"
                android:scaleType="centerInside"
                android:src="@drawable/barley" />

            <ImageView
                android:id="@+id/corn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:alpha="0.5"
                android:scaleType="centerInside"
                android:src="@drawable/corn" />


        </LinearLayout>
        <TextView
            android:id="@+id/traderstxtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#83CCED"
            android:text="Traders" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/man1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                android:scaleType="centerInside"
                android:src="@drawable/man1" />

            <ImageView
                android:id="@+id/man2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:alpha="0.5"
                android:scaleType="centerInside"
                android:src="@drawable/man2" />

            <ImageView
                android:id="@+id/man3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:alpha="0.5"
                android:scaleType="centerInside"
                android:src="@drawable/man3" />


        </LinearLayout>
        <TextView
            android:id="@+id/adstxtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#83CCED"
            android:text="Popular Ads" />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listre"
                    android:name="com.example.nazkar.ItemFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:layoutManager="LinearLayoutManager"
                    tools:context=".animals.animalsFragment"
                    tools:listitem="@layout/fragment_item"
           />





    </LinearLayout>

</ScrollView>


</LinearLayout>