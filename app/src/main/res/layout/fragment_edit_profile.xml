<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editProfile">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="30dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
android:layout_marginTop="50dp"
            android:id="@+id/userimageedit"
android:background="@drawable/adlayout"
            android:src="@drawable/usericonedit"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:clipToOutline = "true"
            android:layout_height="wrap_content"
             />

        <ImageView
            android:id="@+id/adddpimgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@id/userimageedit"
            android:layout_below="@id/userimageedit"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="-50dp"

            android:src="@drawable/adddp"
            android:textColor="@color/appcolor" />


    </RelativeLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <TextView
            android:textColor="@color/appcolor"
            android:id="@+id/nametxtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Syed Ali Nawaz Shah"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/appcolor"
            android:id="@+id/editnametxtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="edit"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:textColor="@color/appcolor"
            android:id="@+id/contacttxtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="0363627282"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/appcolor"
            android:id="@+id/editcontacttxtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="edit"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/emailtxtv"
            android:layout_width="0dp"
            android:textColor="@color/appcolor"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="ajsdhlaksjdh@gmail.com"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editemailtxtv"
            android:layout_width="0dp"
            android:textColor="@color/appcolor"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="edit"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/passtxtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="************"
            android:textSize="15sp"
            android:textColor="@color/appcolor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editpasstxtv"
            android:layout_width="0dp"
            android:textColor="@color/appcolor"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="edit"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
    android:layout_marginRight="10dp"
    android:src="@drawable/feedback"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/feedbacktxtv"
                android:textColor="@color/appcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Feedback"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedbackhinttxtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Got any queries? We are to help you"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scaleType="center"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/sharetxtv"
            android:layout_width="0dp"
            android:textColor="@color/appcolor"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Share this"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scaleType="center"
            android:src="@drawable/ratingstar" />

        <TextView
            android:id="@+id/ratingtxtv"
            android:layout_width="0dp"
            android:textColor="@color/appcolor"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="App store rating"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>